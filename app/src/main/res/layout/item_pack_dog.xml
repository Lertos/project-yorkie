<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_with_dark_bg">

    <RelativeLayout
        android:id="@+id/linInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/linDogPic">

        <TextView
            android:id="@+id/tvDogName"
            style="@style/fontLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tough Love"
            android:textColor="@color/yellow" />

        <LinearLayout
            android:id="@+id/linDogInfoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDogName"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDogBonus"
                style="@style/fontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Given Bonus: 1.05%" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linDogPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="end">

        <ImageView
            android:id="@+id/ivDogAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/border_with_light_bg"
            android:maxHeight="64dp"
            android:padding="0dp"
            android:src="@mipmap/pack_border_collie" />

    </RelativeLayout>

</RelativeLayout>