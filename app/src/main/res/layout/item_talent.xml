<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_with_dark_bg">

    <RelativeLayout
        android:id="@+id/linUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/talentUpgradeMaxButton"
            style="@style/baseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX" />

        <Button
            android:id="@+id/talentUpgradeSingleButton"
            style="@style/baseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/talentUpgradeMaxButton"
            android:text="1" />

        <TextView
            android:id="@+id/talentHeartsToUpgrade"
            style="@style/fontSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/talentUpgradeSingleButton"
            android:layout_centerHorizontal="true"
            android:text="PH"
            android:textColor="@color/yellow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/linUpgrade">

        <TextView
            android:id="@+id/talentName"
            style="@style/fontLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PH"
            android:textColor="@color/yellow" />

        <LinearLayout
            android:id="@+id/linInfoGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/talentName"
            android:orientation="vertical">

            <TextView
                android:id="@+id/talentDescription"
                style="@style/fontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="PH" />

            <TextView
                android:id="@+id/talentLevel"
                style="@style/fontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH" />

            <TextView
                android:id="@+id/talentCurrentBonus"
                style="@style/fontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH" />

            <TextView
                android:id="@+id/talentNextBonus"
                style="@style/fontSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PH" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>