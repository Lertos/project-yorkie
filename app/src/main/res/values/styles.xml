<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontSmall">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="fontMedium">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="fontLarge">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="fontHeader">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="fontGigantic">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="basicSlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
        <item name="trackHeight">10dp</item>
        <item name="labelBehavior">floating</item>
        <item name="trackColor">@color/faded_light_blue</item>
        <item name="thumbColor">@color/darker_light_blue</item>
        <item name="thumbStrokeColor">@color/black</item>
        <item name="thumbStrokeWidth">2dp</item>
        <item name="thumbRadius">12dp</item>
        <item name="tickColorActive">@color/dark_blue</item>
        <item name="tickColorInactive">@color/faded_light_blue</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- Tooltip Text Color -->
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/toxigenesis</item>
        <item name="android:fontFamily">@font/toxigenesis</item>
    </style>

    <style name="baseButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/toxigenesis</item>
    </style>

    <style name="baseRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>
</resources>